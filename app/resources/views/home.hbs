<div class="mt-4">
  <div class="row">

    {{#each pets}}
      <div class="col-sm-6 col-lg-4">

        <div class="card card-course-item">

          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
          <div class="card-body">

            <h5 class="card-title">{{this.pet_type}}</h5>
            <p class="card-text">{{this.advertisement_type}}</p>
            <a href="#" class="btn btn-primary">Buy Pet</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>